{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "nodeId": { "type": "string" },
    "hostname": { "type": "string" },
    "platform": { "enum": ["windows", "linux", "darwin"] },
    "hardware": {
      "type": "object",
      "properties": {
        "cpu": { "type": "object" },
        "ram": { "type": "object" },
        "gpu": { "type": "object" },
        "storage": { "type": "object" }
      }
    },
    "capabilities": { "type": "array", "items": { "type": "string" } },
    "services": { "type": "object" }
  }
}
