# Authelia Configuration for Nebula Command
# Provides SSO and 2FA for protected homelab services
#
# IMPORTANT: Authelia blocks env vars matching AUTHELIA_*_SECRET pattern
# Use hardcoded values OR non-blocked variable names like JWT_TOKEN, SESSION_TOKEN
#
# To set up:
# 1. Copy this file to configuration.yml
# 2. Replace YOUR_*_HERE placeholders with actual secrets (use: openssl rand -hex 32)
# 3. Ensure users_database.yml exists with your user accounts

theme: dark

server:
  address: tcp://0.0.0.0:9091/

log:
  level: info
  format: text

identity_validation:
  reset_password:
    jwt_secret: 'YOUR_JWT_SECRET_HERE'

totp:
  issuer: NebulaCommand
  period: 30
  skew: 1

authentication_backend:
  file:
    path: /config/users_database.yml
    password:
      algorithm: argon2id
      iterations: 3
      memory: 65536
      parallelism: 4
      key_length: 32
      salt_length: 16

access_control:
  default_policy: deny
  
  rules:
    # Public services (have their own auth) - bypass Authelia
    - domain_regex:
        - '^plex\..*'
        - '^jellyfin\..*'
        - '^home\..*'
        - '^dashboard\..*'
        - '^api\..*'
      policy: bypass
    
    # Admin-only services - require 2FA
    - domain_regex:
        - '^torrent\..*'
        - '^vnc\..*'
        - '^ssh\..*'
        - '^vms\..*'
        - '^gamestream\..*'
        - '^storage\..*'
        - '^s3\..*'
      policy: two_factor
      subject:
        - "group:admins"

session:
  name: authelia_session
  secret: 'YOUR_SESSION_SECRET_HERE'
  cookies:
    - domain: 'evindrake.net'
      authelia_url: 'https://auth.evindrake.net'
      default_redirection_url: 'https://dashboard.evindrake.net'
      expiration: 1h
      inactivity: 5m
      remember_me: 1M
  
  redis:
    host: authelia-redis
    port: 6379

regulation:
  max_retries: 3
  find_time: 2m
  ban_time: 5m

storage:
  encryption_key: 'YOUR_ENCRYPTION_KEY_HERE'
  local:
    path: /data/db.sqlite3

notifier:
  # Using filesystem notifications - codes appear in dashboard notification bell
  # The dashboard API reads from /config/notification.txt via SSH
  filesystem:
    filename: /config/notification.txt
