{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://nebulacommand.io/schema/environments.json",
  "title": "Nebula Command Environments Schema",
  "description": "Schema for defining infrastructure environments in Nebula Command",
  "type": "object",
  "properties": {
    "version": {
      "type": "string",
      "description": "Schema version",
      "default": "1.0"
    },
    "environments": {
      "type": "array",
      "description": "List of environment definitions",
      "items": {
        "$ref": "#/definitions/environment"
      }
    }
  },
  "required": ["environments"],
  "definitions": {
    "environment": {
      "type": "object",
      "description": "An infrastructure environment (server, VM, container)",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for this environment",
          "pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$"
        },
        "name": {
          "type": "string",
          "description": "Human-readable name for this environment"
        },
        "type": {
          "type": "string",
          "description": "Environment type",
          "enum": ["cloud", "on-premise", "hybrid", "development"]
        },
        "connection": {
          "$ref": "#/definitions/connection"
        },
        "health_check": {
          "$ref": "#/definitions/health_check"
        },
        "capabilities": {
          "type": "array",
          "description": "List of capabilities this environment provides",
          "items": {
            "type": "string"
          },
          "examples": [["gpu", "docker", "kubernetes", "ollama", "ssh"]]
        },
        "tags": {
          "type": "array",
          "description": "Tags for organizing and filtering environments",
          "items": {
            "type": "string"
          }
        },
        "metadata": {
          "type": "object",
          "description": "Additional metadata for this environment",
          "additionalProperties": true
        }
      },
      "required": ["id", "name", "type", "connection"]
    },
    "connection": {
      "type": "object",
      "description": "Connection configuration for the environment",
      "properties": {
        "type": {
          "type": "string",
          "description": "Connection type",
          "enum": ["ssh", "agent-api", "local", "docker"]
        }
      },
      "required": ["type"],
      "allOf": [
        {
          "if": {
            "properties": { "type": { "const": "ssh" } }
          },
          "then": {
            "properties": {
              "type": { "const": "ssh" },
              "host": {
                "type": "string",
                "description": "SSH host (IP or hostname)"
              },
              "port": {
                "type": "integer",
                "description": "SSH port",
                "default": 22,
                "minimum": 1,
                "maximum": 65535
              },
              "user": {
                "type": "string",
                "description": "SSH username"
              },
              "key_path": {
                "type": "string",
                "description": "Path to SSH private key file"
              },
              "key_env": {
                "type": "string",
                "description": "Environment variable containing SSH private key"
              },
              "passphrase_env": {
                "type": "string",
                "description": "Environment variable containing key passphrase"
              },
              "jump_host": {
                "type": "string",
                "description": "Jump host for SSH tunneling"
              }
            },
            "required": ["host", "user"],
            "oneOf": [
              { "required": ["key_path"] },
              { "required": ["key_env"] }
            ]
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "agent-api" } }
          },
          "then": {
            "properties": {
              "type": { "const": "agent-api" },
              "url": {
                "type": "string",
                "description": "Agent API endpoint URL",
                "format": "uri"
              },
              "token_env": {
                "type": "string",
                "description": "Environment variable containing API token"
              },
              "verify_ssl": {
                "type": "boolean",
                "description": "Whether to verify SSL certificates",
                "default": true
              },
              "timeout": {
                "type": "integer",
                "description": "Connection timeout in seconds",
                "default": 30
              }
            },
            "required": ["url", "token_env"]
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "local" } }
          },
          "then": {
            "properties": {
              "type": { "const": "local" },
              "shell": {
                "type": "string",
                "description": "Shell to use for commands",
                "default": "/bin/bash"
              },
              "working_dir": {
                "type": "string",
                "description": "Default working directory"
              }
            }
          }
        },
        {
          "if": {
            "properties": { "type": { "const": "docker" } }
          },
          "then": {
            "properties": {
              "type": { "const": "docker" },
              "host": {
                "type": "string",
                "description": "Docker host (unix socket or TCP)",
                "default": "unix:///var/run/docker.sock"
              },
              "compose_file": {
                "type": "string",
                "description": "Path to docker-compose file"
              },
              "project_name": {
                "type": "string",
                "description": "Docker Compose project name"
              }
            }
          }
        }
      ]
    },
    "health_check": {
      "type": "object",
      "description": "Health check configuration for the environment",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Whether health checks are enabled",
          "default": true
        },
        "interval": {
          "type": "integer",
          "description": "Health check interval in seconds",
          "default": 60,
          "minimum": 5
        },
        "timeout": {
          "type": "integer",
          "description": "Health check timeout in seconds",
          "default": 10,
          "minimum": 1
        },
        "retries": {
          "type": "integer",
          "description": "Number of retries before marking unhealthy",
          "default": 3,
          "minimum": 1
        },
        "method": {
          "type": "string",
          "description": "Health check method",
          "enum": ["ping", "ssh", "http", "tcp", "command"]
        },
        "endpoint": {
          "type": "string",
          "description": "HTTP endpoint for health checks (if method is http)"
        },
        "command": {
          "type": "string",
          "description": "Command to run for health check (if method is command)"
        },
        "expected_status": {
          "type": "integer",
          "description": "Expected HTTP status code",
          "default": 200
        }
      }
    }
  }
}
