# ============================================
# DNS MANAGER CONFIGURATION
# Auto-generated from config templates
# Environment: {{ environment }}
# Generated: {{ timestamp }}
# ============================================

# Cloudflare API Token
# Create at: https://dash.cloudflare.com/profile/api-tokens
# Required permissions: Zone.DNS (Edit)
CLOUDFLARE_API_TOKEN={{ secrets.cloudflare_api_token }}

# DNS Target IP
# Public IP where services are hosted
{% if environment == 'prod' %}
DNS_TARGET_IP={{ config.public_ip }}
{% else %}
DNS_TARGET_IP=127.0.0.1
{% endif %}

# Service Catalog Path
SERVICE_CATALOG_PATH=/config/services.yaml

# Consul Integration
CONSUL_HOST={{ config.consul_host|default('consul-server') }}

# Sync Settings
SYNC_INTERVAL={{ config.dns_sync_interval|default('300') }}

# Logging
LOG_LEVEL={{ config.dns_log_level|default('INFO') }}
