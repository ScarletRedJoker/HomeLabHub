# JWT Configuration
JWT_SECRET={{ secrets.jwt_secret }}
JWT_ALGORITHM=HS256
JWT_EXPIRY_HOURS={{ config.jwt_expiry_hours|default('24') }}

# User Authentication (from dashboard)
WEB_USERNAME={{ secrets.web_username }}
WEB_PASSWORD={{ secrets.web_password }}

# Service-to-Service Authentication Tokens
# These tokens never expire - rotate manually if compromised
SERVICE_TOKEN_DASHBOARD={{ secrets.service_token_dashboard }}
SERVICE_TOKEN_DISCORD_BOT={{ secrets.service_token_discord_bot }}
SERVICE_TOKEN_STREAM_BOT={{ secrets.service_token_stream_bot }}
SERVICE_TOKEN_CELERY_WORKER={{ secrets.service_token_celery_worker }}

# Application Settings
PORT=8000
DEBUG={{ config.debug|default('false') }}
