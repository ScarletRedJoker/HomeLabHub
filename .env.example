# ======================================================================
# Unified Homelab Environment Configuration Template
# ======================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control
# 
# To generate secure secrets, use:
#   python3 -c 'import secrets; print(secrets.token_urlsafe(32))'  # API Keys
#   python3 -c 'import secrets; print(secrets.token_hex(32))'      # Session Secrets
#   openssl rand -base64 24                                         # Passwords
# ======================================================================

# ============================================
# General Settings
# ============================================
SERVICE_USER=evin
LETSENCRYPT_EMAIL=your-email@example.com

# ============================================
# Database Passwords (CRITICAL - REQUIRED)
# ============================================
# Generate with: python3 -c 'import secrets; print(secrets.token_urlsafe(16))'
# Used by: PostgreSQL container initialization and service connections
DISCORD_DB_PASSWORD=
STREAMBOT_DB_PASSWORD=
JARVIS_DB_PASSWORD=

# ============================================
# Web Interface & Service Passwords
# ============================================
CODE_SERVER_PASSWORD=
VNC_PASSWORD=
VNC_USER_PASSWORD=
WEB_USERNAME=admin
WEB_PASSWORD=

# ============================================
# Session Secrets & API Keys (CRITICAL - REQUIRED)
# ============================================
# Generate with: python3 -c 'import secrets; print(secrets.token_hex(32))'
SESSION_SECRET=
DASHBOARD_API_KEY=
DISCORD_SESSION_SECRET=
STREAMBOT_SESSION_SECRET=

# ============================================
# OpenAI API (REQUIRED for AI features)
# ============================================
# Get from: https://platform.openai.com/api-keys
# Required for: Dashboard AI Assistant, Stream Bot
OPENAI_API_KEY=
AI_INTEGRATIONS_OPENAI_API_KEY=
AI_INTEGRATIONS_OPENAI_BASE_URL=https://api.openai.com/v1

# Stream Bot specific OpenAI (optional override)
STREAMBOT_OPENAI_API_KEY=
STREAMBOT_OPENAI_BASE_URL=https://api.openai.com/v1

# ============================================
# Discord Bot Configuration (REQUIRED)
# ============================================
# Get from: https://discord.com/developers/applications
# Required for: Discord Ticket Bot functionality
DISCORD_BOT_TOKEN=
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
DISCORD_APP_ID=
VITE_DISCORD_CLIENT_ID=
VITE_CUSTOM_WS_URL=wss://bot.rig-city.com/ws
RESET_DB=false

# ============================================
# Twitch Integration (REQUIRED for streaming features)
# ============================================
# Get from: https://dev.twitch.tv/console/apps
# Required for: Discord Bot stream notifications, Stream Bot
TWITCH_CLIENT_ID=
TWITCH_CLIENT_SECRET=
TWITCH_CHANNEL=

# ============================================
# YouTube Integration (Optional)
# ============================================
# Get from: https://console.cloud.google.com/apis/credentials
# Required for: Stream Bot YouTube integration
YOUTUBE_CLIENT_ID=
YOUTUBE_CLIENT_SECRET=

# ============================================
# Kick Integration (Optional)
# ============================================
# Required for: Stream Bot Kick integration
KICK_CLIENT_ID=
KICK_CLIENT_SECRET=

# ============================================
# Plex Media Server
# ============================================
# Get claim token from: https://www.plex.tv/claim/
# Required for: Plex Media Server initial setup
# IMPORTANT: Claim token expires after 4 minutes!
PLEX_CLAIM=

# ============================================
# MinIO Object Storage (REQUIRED)
# ============================================
# Generate secure credentials for MinIO S3-compatible storage
# Used by: Dashboard file uploads, service data storage
MINIO_ROOT_USER=admin
MINIO_ROOT_PASSWORD=

# ============================================
# VNC Remote Desktop
# ============================================
VNC_USER=evin
NOVNC_URL=https://vnc.evindrake.net

# ============================================
# Docker & SSH Configuration
# ============================================
DOCKER_HOST=unix:///var/run/docker.sock
SSH_HOST=localhost
SSH_PORT=22
SSH_USER=evin
SSH_KEY_PATH=/home/evin/.ssh/id_rsa
ENABLE_SCRIPT_EXECUTION=true

# ============================================
# Flask Configuration (Dashboard)
# ============================================
FLASK_ENV=production
FLASK_DEBUG=false
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-here-change-this

# ============================================
# Service URLs
# ============================================
DISCORD_BOT_URL=https://bot.rig-city.com
PLEX_URL=https://plex.evindrake.net
N8N_URL=https://n8n.evindrake.net
STATIC_SITE_URL=https://scarletredjoker.com

# ============================================
# Google Services Integration (Optional)
# ============================================
# These are automatically managed by Replit Connectors when running on Replit
# For production deployments, you can optionally provide your own OAuth credentials
GOOGLE_TOKEN_CACHE_TTL=300
CALENDAR_POLL_INTERVAL_MINUTES=5
CALENDAR_LEAD_TIME_MINUTES=10
GMAIL_FROM_NAME=Homelab Dashboard
GMAIL_DEFAULT_RECIPIENT=your-email@example.com
DRIVE_BACKUP_FOLDER_NAME=Homelab Backups
DRIVE_BACKUP_RETENTION_DAYS=30
DRIVE_AUTO_BACKUP_ENABLED=false
DRIVE_AUTO_BACKUP_SCHEDULE=0 2 * * *

# ============================================
# Home Assistant Integration (Optional)
# ============================================
HOME_ASSISTANT_URL=http://homeassistant:8123
HOME_ASSISTANT_TOKEN=your-long-lived-access-token-here

# ============================================
# Database URLs (Auto-configured)
# ============================================
# These are automatically constructed from the passwords above
STREAMBOT_DATABASE_URL=postgresql://streambot:${STREAMBOT_DB_PASSWORD}@discord-bot-db:5432/streambot
STREAMBOT_NODE_ENV=production
STREAMBOT_PORT=5000

# ============================================
# Secret Rotation Schedule Recommendations
# ============================================
# Rotate secrets periodically for enhanced security:
# - API Keys & Tokens: Every 90 days
# - Session Secrets: Every 30 days  
# - Database Passwords: Every 180 days
# - Service Passwords: Every 90 days
# 
# See BACKUP_RESTORE_GUIDE.md for rotation procedures
