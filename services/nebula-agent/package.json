{
  "name": "nebula-agent",
  "version": "1.0.0",
  "description": "Nebula Command Agent for Windows VM - Receives deployment commands from dashboard",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "pm2:start": "pm2 start dist/index.js --name nebula-agent",
    "pm2:stop": "pm2 stop nebula-agent",
    "pm2:restart": "pm2 restart nebula-agent"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "systeminformation": "^5.21.24"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  }
}
